     <%= link_to ouvrages_path do %> Ouvrages <% end %>
    </div>
    <div class="home-box-infos-box">
      <div class="row">
        <div class="col-md-6 col-sm-6">
          <div>
            <div class="home-box-infos1">+  <%= number_with_delimiter(OuvragesDepense.all.sum('montant').to_i, :delimiter => ' ') %> €</div>
            <div class="home-box-infos2">Dépenses cumulées</div>
          </div><br>
          
          <div>
            <div class="home-box-infos1"> + <%= ((SolideoFinancement.where('categorie= ?', "ouvrages").order('date DESC').first.montant_prevu-SolideoFinancement.where('categorie= ?', "ouvrages").order('date DESC').last.montant_prevu)/SolideoFinancement.where('categorie= ?', "ouvrages").order('date DESC').last.montant_prevu*100).round %> %</div>
            <div class="home-box-infos2">Surcoûts budgétaires</div>
          </div><br>
          
          <div>
            <div class="home-box-infos3"><%= link_to chantiers_path do %><i class="fas fa-exclamation-triangle"></i> <%= OuvragesRevue.where('date = ? AND delai_indicateur != ?', OuvragesRevue.order('date DESC').first.date, 1).count %> risques remontés<% end %></div>
           
          </div>
          </div>

        <div class="col-md-6 col-sm-6">
          <div id="container-jauge2">
            
          </div>
        </div>
      </div>
    </div>
  </div>
      </div>
  </div>
  
