    <div class="col-md-6">
      <div class="home-box">
        <div class="home-box-title">
          <%= link_to solideo_depenses_path do %>Solideo<% end %>
        </div>
        <div class="home-box-infos-box">
          <div class="row">
            <div class="col-md-12">

              <div>
                <div class="home-box-infos1"><i class="fas fa-calendar-day"></i> 8 février 2021</div>
                <div class="home-box-infos2">Prochain CA</div>
              </div><br>

              <div>
