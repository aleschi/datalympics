<div  class="SD-table-box">
  <div class="row">
   <div class="col-md-6"> 
      <%= pie_chart(@financement.unscope(:order).group(:categorie).sum('montant_prevu'), library: {
      chart: {
           backgroundColor: '#fff',
        style:{
          fontFamily: "Spectral",
          maxWidth: "500px",
          }
        },
   title: {
          text:'Répartition des financements de la collectivité (2018-2025)',
          margin:40,
          style: {
            color: '#8F8F8F',
            fontSize: '16px',
            fontStyle: 'italic',
            }
        },
      colors: ['#E0A922', "#ac8c97" , "#487F7F",'#F38C75' ],
        tooltip: {
   
          pointFormat: 'Montant : <b>{point.y:,.0f}€</b><br>',
        
        },
      

        plotOptions: {
            pie: {
                allowPointSelect: true,
              minSize: 200,
               # cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '{point.name}<br>{point.y:,.0f}€ - {point.percentage:.1f} %',
                    style: {
                      color: "#8F8F8F",
                      fontSize: "12px",
                      fontWeight: "400",
                      fontStyle: 'italic',
                      }
                }
            }
        },
      }) %>

    </div>
    <% if !@ouvrages.nil? && !@ouvrages.empty? %>    
  <div class="col-md-6">
    <div class="SD-topo-box-title"><span>Ouvrages financés</span></div>
     <div class="SF-topo-financeurs-box">
      <div class="collectivites-ouvrages-name"></div>
      <div class="SF-topo-financeurs-budget"><div class="SF-topo-financeurs-budget-prevu"><em>Fin. prévus €</em></div><div class="SF-topo-financeurs-budget-actuel"> | <em>Fin. actuels €</em></div></div>
    </div> <br><br>
    <% @ouvrages.each do |ouvrage| %>
    <div class="SF-topo-financeurs-box">
      <div class="collectivites-ouvrages-name"><%= link_to ouvrage_path(ouvrage) do %><%= Ouvrage.find(ouvrage).name %> <% end %></div>
      <div class="SF-topo-financeurs-budget"><div class="SF-topo-financeurs-budget-prevu"><%= number_with_delimiter(OuvragesFinancement.where('name = ? AND ouvrage_id = ?',@solideo_financement.financeur, ouvrage).sum('montant_prevu').to_i, :delimiter => ' ')%> €</div><div class="SF-topo-financeurs-budget-actuel"> |  <%= number_with_delimiter(OuvragesFinancement.where('name = ? AND ouvrage_id = ?',@solideo_financement.financeur, ouvrage).sum('montant').to_i, :delimiter => ' ') %> €</div></div>
    </div>
    <% end %>
  </div>
  <% end %>
</div><br><br>
</div>
