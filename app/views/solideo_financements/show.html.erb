
<div class="O_page">
  <div class="O_home_button">
    <%= link_to collectivites_path do %><i class="fas fa-chevron-left"></i>Retour aux collectivités <%end %>
  </div>
   <h1 class="SD_title"><%= @solideo_financement.financeur %> </h1>
<div class="SD-table-box">
  <div class="SD-topo-box-title">
        <span><%= @solideo_financement.financeur %> en chiffres</span>
      </div><br><br>
  
    <div class="calendar-infos">
   
     <div class="calendar-infos-box">
      <div>
        <i class="fas fa-coins"></i>
      </div>
      <div>
        <%= number_with_delimiter(SolideoFinancement.where('financeur=?',@solideo_financement.financeur).sum('montant_prevu').to_i, :delimiter => ' ') %> €<br>
        <span>Budget Total</span>
      </div>
    </div>
     <div class="calendar-infos-box">
      <div>
     <i class="fas fa-hard-hat"></i>
      </div>
      <div>
      <%=Ouvrage.where('maitre_oeuvre = ?',@solideo_financement.financeur).length%><br>
      <span>ouvrages MOA</span>
      </div>
    </div>
    
   
    <div class="calendar-infos-box">
      <div>
      <i class="fas fa-chart-pie"></i>
      </div>
      <div>
      1%<br>
        <span>Du budget des JOP2024</span>
      </div>
    </div>

  </div><br><br>
    <div class="calendar-infos">
  <div class="calendar-infos-box">
      <div>
         <i class="fas fa-euro-sign"></i>
      </div>
      <div>
        <%= number_with_delimiter(SolideoFinancement.where('financeur=?',@solideo_financement.financeur).sum('montant').to_i, :delimiter => ' ') %> €<br>
        <span>Financements actuels</span>
      </div>
    </div>
   <div class="calendar-infos-box">
      <div>
      <i class="fas fa-building"></i>
      </div>
      <div>
      <%= @ouvrages_co.length + Ouvrage.where('maitre_oeuvre = ?',@solideo_financement.financeur).length%><br>
        <span>Ouvrages financés</span>
      </div>
    </div>
    
    <div class="calendar-infos-box">
      <div>
      <i class="fas fa-funnel-dollar"></i>
      </div>
      <div>
       <%= ((SolideoFinancement.where('financeur=?',@solideo_financement.financeur).sum('montant_prevu')/SolideoFinancement.all.sum('montant_prevu')).round(2)*100).round%>%<br>
      
        <span>Du budget de la Solideo</span>
      </div>
    </div>

  </div>
   <br><br>
</div>
  <br><br>
  
<div  class="SD-table-box">
  <div class="row">
   <div class="col-md-6"> 
       <div class="SD-topo-box-title">
    <span>Répartition du budget</span>
  </div><br>
     <div>

      <%= pie_chart(@financement.unscope(:order).group(:categorie).sum('montant_prevu'), library: {
      chart: {
        plotBackgroundColor: nil,
        plotBorderWidth: nil,
        plotShadow: false,
        type: 'pie',
           backgroundColor: '#fff',
        style:{
          fontFamily: "Spectral",
          maxWidth: "500px",
          }
        },
   title: {
          text:'Répartition des financements de la collectivité (prev 2018)',
      
          style: {
            color: '#6A6A6A',
            fontSize: '16px',
            fontStyle: 'italic',
            }
        },
      colors: ['#E0A922', "#ac8c97" , "#487F7F",'#F38C75' ],
        tooltip: {
   
          pointFormat: 'Montant : <b>{point.y:,.0f}€</b><br>',
        
        },
      

        plotOptions: {
            pie: {
                allowPointSelect: true,
              minSize: 200,
                cursor: 'pointer',
                dataLabels: {
                    enabled: true,
                    format: '{point.name}<br>{point.y:,.0f}€ - {point.percentage:.1f} %',
                    style: {
                      color: "#6A6A6A",
                      fontSize: "12px",
                      fontWeight: "400",
                      fontStyle: 'italic',
                      }
                }
            }
        },
      }) %>
       
     </div>
    </div>
   
  <div class="col-md-6">
    <div class="SD-topo-box-title"><span>Ouvrages financés</span></div>
     <div class="SF-topo-financeurs-box">
      <div class="collectivites-ouvrages-name"></div>
      <div class="SF-topo-financeurs-budget"><div class="SF-topo-financeurs-budget-prevu"><em>Fin. prévus €</em></div><div class="SF-topo-financeurs-budget-actuel"> | <em>Evolution</em></div></div>
    </div> <br><br>
   
    <% if Ouvrage.where('maitre_oeuvre = ?',@solideo_financement.financeur).length > 0 %>
         <div class='ouvrages-mo'>
         MOA : <%= @solideo_financement.financeur %>
       </div>
      <% Ouvrage.where('maitre_oeuvre = ?',@solideo_financement.financeur).each do |ouvrage| %>
      <div class="SF-topo-financeurs-box">
        <div class="collectivites-ouvrages-name"><%= link_to ouvrage_path(ouvrage) do %><%= Ouvrage.find(ouvrage.id).name %> <% end %></div>
        <div class="SF-topo-financeurs-budget"><div class="SF-topo-financeurs-budget-prevu"><%= number_with_delimiter(OuvragesFinancement.where('name = ? AND ouvrage_id = ?',@solideo_financement.financeur, ouvrage.id).sum('montant_prevu').to_i, :delimiter => ' ')%> €</div><div class="SF-topo-financeurs-budget-actuel"> |  <i class="fas fa-chart-line"></i> +4%</div></div>
      </div>
      <% end %>
    <br><br>
    <% end %>
     <div class='ouvrages-mo'>
       <% if Ouvrage.where('maitre_oeuvre = ?',@solideo_financement.financeur).length > 0 %> Autres <% end %>ouvrages financés 
       </div>
    <% @ouvrages_co.each do |ouvrage| %>
     
        
    <div class="SF-topo-financeurs-box">
      <div class="collectivites-ouvrages-name"><%= link_to ouvrage_path(ouvrage) do %><%= Ouvrage.find(ouvrage).name %> <% end %></div>
      <div class="SF-topo-financeurs-budget"><div class="SF-topo-financeurs-budget-prevu"><%= number_with_delimiter(OuvragesFinancement.where('name = ? AND ouvrage_id = ?',@solideo_financement.financeur, ouvrage).sum('montant_prevu').to_i, :delimiter => ' ')%> €</div><div class="SF-topo-financeurs-budget-actuel"> |  <i class="fas fa-chart-line"></i> +4%</div></div>
    </div>
    <% end %>
  </div>

</div><br><br>
</div>
  <br><br>

<div  class="SD-table-box">
   <div class="SD-topo-box-title">
        <span>évolution de la maquette des financements de la collectivité</span>
    </div><br><br>
<div id="container-chart">
  </div>
</div>
</div>

<script>
Highcharts.chart('container-chart', {
    chart: {
        type: 'waterfall',
      spacing: [40,40,40,40],
        style:{
          fontFamily: "Spectral",
          },
    },

    title: {
        text: 'Evolution de la maquette budgétaire de la collectivité ',
      margin:40,
        style: {
                  color: "#6A6A6A",
                  fontWeight: "400",
          fontStyle: 'italic',
      fontSize: '16px',
                  },
    },

    xAxis: {
        type: 'category'
    },

    yAxis: {
      gridLineColor: '#E6F0FF', 
        title: {
            text: 'Montant €'
        }
    },

    legend: {
        enabled: false
    },

    tooltip: {
        pointFormat: '<b>${point.y:,.2f}</b> €'
    },

    series: [{
      borderColor: '#fff',
      data: [{
            name: 'Prévisionnel 2018',
            y: 1386929000,
            color: "#6A6A6A",
        }, {
            name: 'Ouvrage X',
            y: 13100000,
            color: "#F1013B",
        }, {
            name: 'Ouvrage Y',
            y: -196358000,
            color: "#48AF5C",
        }, {
            name: 'Ouvrage Z ',
            y: 500000000,
            color: "#F1013B",
        },  {
            name: 'Prévisionnel 2020',
            isSum: true,
            color: Highcharts.getOptions().colors[1]
        }],
        dataLabels: {
            enabled: true,
            formatter: function () {
                return Highcharts.numberFormat(this.y / 1000, 0, ',') + 'k';
            },
          
            style: {
                fontWeight: 'bold',
                color: '#000',
            
              fontFamily: 'Karla',
            }
        },
        pointPadding: 0
    }]
});
</script>
