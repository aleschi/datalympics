<script>
  $('.SF_new_form_field_submit').hide();
    function readURL(input) {
      if (input.files && input.files[0]) {
          var reader = new FileReader();
          reader.onload = function(e) {
         
              
          }
          reader.readAsDataURL(input.files[0]);
      }
  }
  $("input").change(function() {
      readURL(this);
      $(this).parent().parent().parent().children('.SF_new_form_field_submit').show();
      $(this).parent().children('.SF-new-input-text').html($(this).val().replace(/C:\\fakepath\\/i, ''));
  });

</script>
