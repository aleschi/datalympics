<div class="SD_page">
  <div class="SD_home_button">
    <%= link_to root_path do %><i class="fas fa-chevron-left"></i><i class="fas fa-home"></i>Retour accueil<%end %>
  </div>
 
  <h1 class="SD_title">Les dépenses des collectivités </h1>

   <%= render 'topo'%>
<table>
  <thead>
    <tr>
      <th>Ouvrage</th>
      <th>Name</th>
      <th>Financement prevu</th>
      <th>Financement actuel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ouvrages_financeurs.each do |ouvrages_financeur| %>
      <tr>
        <td><%= ouvrages_financeur.ouvrage.name %></td>
        <td><%= ouvrages_financeur.name %></td>
        <td><%= ouvrages_financeur.financement_prevu %></td>
        <td><%= ouvrages_financeur.financement_actuel %></td>
        <td><%= link_to 'Show', ouvrages_financeur %></td>
        <td><%= link_to 'Edit', edit_ouvrages_financeur_path(ouvrages_financeur) %></td>
        <td><%= link_to 'Destroy', ouvrages_financeur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ouvrages Financeur', new_ouvrages_financeur_path %>
</div>
