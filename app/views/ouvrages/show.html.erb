<div class="O_page">
  <div class="O_home_button">
    <%= link_to ouvrages_path do %><i class="fas fa-chevron-left"></i>Retour aux ouvrages<%end %>
  </div>
  <h1 class="O_title"><span><%= @ouvrage.name %></span></h1>
  <%= render 'topo_ouvrage'%>
  <%= render 'ouvrage_depenses' %>
  <%= render 'jalons' %>

  <div class="ouvrage-edit-btn">
        <%= link_to "Modifier l'ouvrage", edit_ouvrage_path(@ouvrage) %>
        <%= link_to "Supprimer l'ouvrage", ouvrage_path(@ouvrage), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>
