<div class="EB_page">
  <div class="ED_home_button">
    <%= link_to @ouvrage do %><i class="fas fa-chevron-left"></i>Retour<%end %>
  </div>
  <h1 class="EB_title">Modifier l'ouvrage</h1>

<%= render 'form', ouvrage: @ouvrage %>
  
  <div>
    <%= link_to ouvrage_path, method: :delete do %>supprimer <% end %>
  </div>
  <br><br>
  
    <%=form_tag update_file_path, multipart: true do %>
    
  <div class="new-ouvrage-file">
    <%= file_field_tag :file %>
  </div>

    <div class="ED_new_form_field_submit">
      <%= submit_tag 'Importer'%>
    </div>

  <%end%>
  
  <br>
  <% Ouvrage.all.order('id DESC').each do |ouvrage|%>
<div><%= ouvrage.name %> <%= link_to edit_ouvrage_path(ouvrage) do%>modifier<% end %></div>
  <% end %>
</div>



