
<div class="SD-table-box">
   <div class="SD-topo-box-title">
    <span>Calendrier des travaux</span>
  </div><br><br>
  <div class="ouvrages-risques-infos">
        <% if @ouvrage.ouvrages_revues.count > 0 %>
          <% if @ouvrage.ouvrages_revues.last.delai_time.to_i > 0 %>
          <i class="fas fa-exclamation-triangle"></i>Retard : <%= @ouvrage.ouvrages_revues.last.delai_time.to_i %> mois 
          <% else %> Aucun retard envisagé <% end %><br>
          <% else %> <i class="fas fa-exclamation-triangle"></i> Retard : 3-6 mois <% end %><br>
  </div>
  <div>
     <div id="container-steps">
     </div>    
  </div>
  
  <br><br>

      <div class="SD-topo-box-title">
        <span>Suivi des délais</span>
      </div><br><br>
 
    <div class="flexslider" id="flexslider">
        <ul class="slides">
          <% if @ouvrage.ouvrages_revues.count > 0 %>
          <% @ouvrage.ouvrages_revues.order('date DESC').each do |revue| %>
          <li>  
            <div class="row">
              <div class="col-md-6">               
                <div class="ouvrages-flexslider-text">
                   <em><%= l(revue.date, :format => '%B %Y')%>:</em>
                </div><br>
                <div class="jauge-risques">
                  <div class="risque1"></div>
                  <div class="risque2"></div>
                  <div class="risque3 "></div>
                  <div class="risque4 risque-active"></div>
                  <div class="risque5"></div>
                </div>
                  <div class="ouvrages-flexslider-text">
                    <span> Retard envisagé : <%= revue.delai_time.to_i %> mois</span> <br><br>
                   <%= revue.delai_commentaire %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="ouvrages-flexslider-text">
                   <span><em>Actions envisagées </em></span><br><br>
                  <%= revue.delai_action %>
                </div><br>
              </div>
            </div>
          </li>
          <% end %>
          <% end %>
        </ul>
      </div>
  <br><br>
   
      <div class="SD-topo-box-title">
        <span>Chemin critique</span>
      </div><br><br>
      <div class="ouvrages-flexslider-text">
       à définir
      </div><br><br>
