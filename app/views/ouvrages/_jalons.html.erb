
<div class="SD-table-box">
   <div class="SD-topo-box-title">
    <span>Calendrier des travaux</span>
  </div><br><br>
  <% if @ouvrage.ouvrages_revues.count > 0 %>
    <div class="ouvrages-risques-infos">     
          <% if @ouvrage.ouvrages_revues.order("date DESC").first.delai_time.to_i > 0 %>
          <i class="fas fa-exclamation-triangle"></i> Retard : <%= @ouvrage.ouvrages_revues.order("date DESC").first.delai_time.to_i %> mois 
          <% else %> Aucun retard envisagé <% end %>         
    </div>
   <% end %><br>
  
  <div>
     <div id="container-steps">
     </div>    
  </div>
  
  <br><br>

  <div class="SD-topo-box-title">
    <span>Suivi des délais</span>
  </div><br><br>
 
    <div class="flexslider" id="flexslider">
        <ul class="slides">
          <% if @ouvrage.ouvrages_revues.count > 0 %>
          <% @ouvrage.ouvrages_revues.order('date DESC').each do |revue| %>
          <li> 
            <% if user_signed_in? && (current_user.email == "lou.vettier@finances.gouv.fr" || current_user.email == "alexandra.leschi@finances.gouv.fr") %>
            <div class="edit-revues-btn"><%= link_to edit_ouvrages_revue_path(revue) do %> Modifier <i class="fas fa-pencil-alt"></i><% end %></div>
            <% end %>
            <div class="row">
              <div class="col-md-6">               
                <div class="ouvrages-flexslider-text">
                   <em><%= l(revue.date, :format => '%B %Y')%>:</em>
                </div><br>
                <div class="jauge-risques">
                  <% if revue.delai_time.to_i == 0%><div class="risque1 risque-active"></div><% else %><div class="risque1"></div><% end %>
                  <% if revue.delai_time.to_i > 0 && revue.delai_time.to_i < 3 %><div class="risque2 risque-active"></div><% else %><div class="risque2"></div><% end %>
                  <% if revue.delai_time.to_i >= 3 && revue.delai_time.to_i < 6 %><div class="risque3 risque-active"></div><% else %><div class="risque3"></div><% end %>
                  <% if revue.delai_time.to_i >= 6 && revue.delai_time.to_i < 8 %><div class="risque4 risque-active"></div><% else %><div class="risque4"></div><% end %>
                  <% if revue.delai_time.to_i >= 8%><div class="risque5 risque-active"></div><% else %><div class="risque5"></div><% end %>
                  
                </div>
                  <div class="ouvrages-flexslider-text">
                    <span> Retard envisagé : <%= revue.delai_time.to_i %> mois</span> <br><br>
                   <%= revue.delai_commentaire %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="ouvrages-flexslider-text">
                   <span><em>Actions envisagées </em></span><br><br>
                  <%= revue.delai_action %>
                </div><br>
              </div>
            </div>
          </li>
          <% end %>
          <% end %>
        </ul>
      </div>
  <br><br>
   
      <div class="SD-topo-box-title">
        <span>Chemin critique</span>
      </div><br><br>
      <div class="ouvrages-flexslider-text">
       Dépendance à définir
      </div><br><br>
      <div id="container-gantt">
        
      </div>
    
</div>


<script>
Highcharts.chart('container-steps', {
    chart: {
        type: 'xrange',
        height: "200px",
        style:{
          fontFamily: "Spectral",
          },    
    },
    title: {
        text: null,
        style: {
          color: "#8F8F8F",
          fontWeight: "400",
          fontStyle: 'italic',
          fontSize: '16px',
                  },
    },
    colors: ["#bfbfbf",'rgba(46,93,99,0.6)'],
    xAxis: [{
        currentDateIndicator: {
            width: 1,
            dashStyle: 'dot',
            color: 'red',
            label: {
                format: '%d %b %Y'
            }
        },
        lineColor: "#8F8F8F",
        type: 'datetime',
    }],
    yAxis: {
        title: {
            text: null,
        },
        gridLineColor: "#fff",
        categories: ["Timeline Initiale","Timeline actuelle"],
        reversed: true,
        labels: {
          enabled: false,
        }
    },    
  legend: {
    enabled: true,
  },
  tooltip: {    
    headerFormat: '<span style="font-size: 10px">{point.key}</span><br/>',
    pointFormat: '<span style="color:{point.color}">●</span> {series.name}, deadline : <b>{point.x}</b><br/>',
    xDateFormat: '%B %Y',
  },
  plotOptions: {
    xrange: {
       dataLabels: {
                enabled: true,
                format: '<b>{point.name}</b>',
                verticalAlign: "bottom",
                padding: 10,
                style: {
                      fontSize: "12px",
                      fontWeight: "400",
                      fontStyle: "italic",
                
                      },
            },
    }
  },
    series: [{
        name: 'Timeline Initiale',
        pointWidth: 8,
        color: "#bfbfbf",
        data: [{
            name: "Jalon 1",
            x: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month %>),
            x2: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month + 3%>),
            y: 0,
            borderColor:'#fff',
            color: '#bfbfbf',
        }, {
           name: "Jalon 2",
            x: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month + 3%>),
            x2: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month + 6%>),
            y: 0,
          borderColor: '#fff',
          color: '#bfbfbf',
        }, {
           name: "Jalon 3",
            x: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month + 6%>),
            x2: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month + 8%>),
            y: 0,
          borderColor: '#fff',
          color: '#bfbfbf',
        }, {
           name: "Jalon 4",
            x: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month + 6%>),
            x2: Date.UTC(<%= @ouvrage.end.year %>, <%= @ouvrage.end.month %>),
            y: 0,
          borderColor: '#fff',
          color: '#bfbfbf',
        }],
        dataLabels: {
            enabled: true
        }
    }, {
        name: 'Timeline actuelle',
        color: 'rgba(46,93,99,0.6)',
        pointWidth: 8,
        data: [{
            name: "Jalon 1",
            x: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month %>),
            x2: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month + 5%>),
            y: 0,
             partialFill: {
               amount: 1,
               fill: '#2E5D63',
             },
          borderColor:'#fff',
          color: 'rgba(46,93,99,0.6)',
        }, {
           name: "Jalon 2",
            x: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month + 5%>),
            x2: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month + 8%>),
            y: 0,
          borderColor: '#fff',
          color: 'rgba(46,93,99,0.6)',
        }, {
           name: "Jalon 3",
            x: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month + 8%>),
            x2: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month + 11 %>),
            y: 0,
          borderColor: '#fff',
          color: 'rgba(46,93,99,0.6)',
        }, {
           name: "Jalon 4",
            x: Date.UTC(<%= @ouvrage.start.year %>, <%= @ouvrage.start.month + 11%>),
            x2: Date.UTC(<%= @ouvrage.end.year %>, <%= @ouvrage.end.month + @ouvrage.ouvrages_revues.order("date DESC").first.delai_time.to_i %>),
            y: 0,
          borderColor: '#fff',
          color: 'rgba(46,93,99,0.6)',
        }],
      
        dataLabels: {
            enabled: true
        }
    }],

});
</script>
