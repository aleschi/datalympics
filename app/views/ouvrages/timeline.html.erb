<div class="O_page">
  <h1 class="SD_title SD_title2">Timeline des ouvrages</h1>
    <h1 class="SD_subtitle">Dernière mise à jour : 22 novembre 2020</h1> 
<div class="SD-table-box">
  <div class="SD-topo-box-title">
    <span>Timeline des ouvrages</span>
  </div><br><br>

   <div id="container-steps"></div>

     
    </div>
</div>


<script>
Highcharts.chart('container-steps', {
    chart: {
        type: 'xrange',
        height:'100%',
        style:{
          fontFamily: "Marianne Regular",
          },    
    },
    title: {
        text: null,
        style: {
          color: "#8F8F8F",
          fontWeight: "400",
          fontStyle: 'italic',
          fontSize: '16px',
                  },
    },
    colors: ["#bfbfbf"],
    xAxis: [{
        currentDateIndicator: {
            width: 1,
            zIndex:5,
            dashStyle: 'dot',
            color: 'red',
            label: {
                format: '%d %b %Y'
            }
        },
        lineColor: "#8F8F8F",
        type: 'datetime',
      plotLines: [{
      color: '#20E37B',
      label: {
        text: "JOP2024",
        textAlign: 'left',
        verticalAlign: 'middle',
        
        y: -30,
        style: {
          color:'#20E37B',
        },
      },
      zIndex: 1,
      width: 5,
      value: Date.UTC(2024,6,26),
    }],
    }],
    yAxis: {
        title: {
            text: null,
        },
        gridLineColor: "#fff",
        categories: ["JOP2024",<% Ouvrage.all.each do |ouvrage| %> '<%= ouvrage.name %>', <% end %>],
        reversed: true,
       labels:{
         enabled: true,
         formatter: function () {
           <% Ouvrage.all.each do |ouvrage| %>
                  if (this.value == '<%= ouvrage.name %>' ){
                    return '<a href="/ouvrages/<%= ouvrage.id%>" style="color:#000">' + this.value + '</a>'
                  } 
           <% end %>
                },
                useHTML: true,
       },
    },    
  legend: {
    enabled: false,
  },
  tooltip: { 
        formatter: function() {
      var point = this,
        series = point.series,
        color = point.color || series.chart.options.colors[point.colorIndex],
        firstDate = Highcharts.dateFormat('%b %Y', point.x),
        secondDate = Highcharts.dateFormat('%b %Y', point.x2),
        header = '<span style="font-size: 10px">' + point.key + '</span><br/>',
        content = '<span style="color:' + color + '">\u25CF</span> ' + ' <b>' + firstDate + ' - ' + secondDate + '</b><br/>';

      return header + content;
    },
     borderColor: 'transparent',
   borderRadius: 16,
   backgroundColor: '#fff',
  },
  plotOptions: {
    xrange: {

       dataLabels: {
                enabled: false,
                format: '<b>{point.name}</b>',
                verticalAlign: "bottom",
                padding: 10,
                style: {
                      fontSize: "12px",
                      fontWeight: "400",
                      fontStyle: "italic",
                
                      },
            },
    }
  },
    series: [ {
        name: 'Ouvrages',
        color: 'red',
        pointWidth: 8,
      groupPadding: 1,
        data: [
          {
            name: "JOP2024",
            x: Date.UTC(2024,6,26),
            x2: Date.UTC(2024,7,1),
            y: 0,
             partialFill: {
               amount: 1,
               fill: '#20E37B',
             },
          borderColor:'#20E37B',
          color: '#20E37B',
        },
       <% Ouvrage.all.each_with_index do |ouvrage, index| %>
          <% if !ouvrage.start.nil? && !ouvrage.end.nil?%>
          {
            name: "Jalon 1",
            x: Date.UTC(<%= ouvrage.start.year %>, <%= ouvrage.start.month %>),
            x2: Date.UTC(<%= ouvrage.start.year %>, <%= ouvrage.start.month + 3%>),
            y: <%= index +1%>,
        <% if ouvrage.ouvrages_revues.count > 0 && ouvrage.ouvrages_revues.order("date DESC").first.delai_indicateur == 5 %>  
           color: "red",
          <% end %>
        }, {
           name: "Jalon 2",
            x: Date.UTC(<%= ouvrage.start.year %>, <%= ouvrage.start.month + 3%>),
            x2: Date.UTC(<%= ouvrage.start.year %>, <%= ouvrage.start.month + 6%>),
            y: <%= index +1%>,
          <% if ouvrage.ouvrages_revues.count > 0 && ouvrage.ouvrages_revues.order("date DESC").first.delai_indicateur == 5 %>
           color: "red",
          <% end %>
        }, {
           name: "Jalon 3",
            x: Date.UTC(<%= ouvrage.start.year %>, <%= ouvrage.start.month + 6%>),
            x2: Date.UTC(<%= ouvrage.start.year %>, <%= ouvrage.start.month + 8%>),
            y: <%= index +1%>,
          <% if ouvrage.ouvrages_revues.count > 0 && ouvrage.ouvrages_revues.order("date DESC").first.delai_indicateur == 5 %>
           color: "red",
          <% end %>
        }, {
           name: "Jalon 4",
            x: Date.UTC(<%= ouvrage.start.year %>, <%= ouvrage.start.month + 6%>),
            x2: Date.UTC(<%= ouvrage.end.year %>, <% if ouvrage.ouvrages_revues.count > 0 %> <%= ouvrage.end.month + ouvrage.ouvrages_revues.order("date DESC").first.delai_time.to_i %><% else%><%= ouvrage.end.month %> <% end %>),
            y: <%= index +1%>,
          <% if ouvrage.ouvrages_revues.count > 0 && ouvrage.ouvrages_revues.order("date DESC").first.delai_indicateur == 5 %>
           color: "red",
          <% end %>
        },
          <% end %>
       <% end %>
        
        ],
      
       
    },

  
  ],

});
</script>



<script>

  $('.menu-ouvrages-timeline').addClass('menu-active2'); 
  $('.menu-ouvrages').addClass('menu-active'); 

  $('#MonCollapse3').addClass('in'); 

</script>