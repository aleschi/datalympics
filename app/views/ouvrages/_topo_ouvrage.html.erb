<div class="O-topo-box">
  <div class="O-topo-box-infos">
    
  </div>
  <% if !@ouvrage_financeurs.nil? %>
  <div class="O-topo-box-financeurs">
     <div class="O-topo-financeurs-title"><span>Financeurs</span></div><br>
    <div class="O-topo-financeurs-subtitle">
      Financements prévus | Financement actuel reçus
    </div>
    <% @ouvrage_financeurs.each do |financeur| %>
    
    <div class="O-topo-financeurs-name"><%= financeur.name %> 
        <span class="pull-right"><%= number_with_delimiter(financeur.financement_prevu.to_i, :delimiter => ' ')%> € | <%= number_with_delimiter(financeur.financement_actuel.to_i, :delimiter => ' ') %> €</span></div>
    <% end %>
  </div>
  <% end %>
</div>