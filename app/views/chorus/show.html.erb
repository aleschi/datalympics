<script>
Highcharts.chart('programme', {
   chart:{
       backgroundColor: '#fff',
       type: 'area',
       spacing: [40,40,40,40],
        style:{
          fontFamily: "Spectral",
          // maxWidth: '500px'
          },      
          },
title: {
        text:"",
},
    colors: ['#2E5D63'],
    yAxis: {
      gridLineColor: '#fff', 
        title: {
            text: 'Total k€'
        }
    },
  tooltip: {
      //  pointFormat: '{series.name}: <b>{point.y}</b><br/>',
        valueSuffix: 'k€',
      
    },
  xAxis:{
    type: 'datetime'
  },
    plotOptions: {
        series: {
            label: {
                connectorAllowed: false
            },       
        }
    },

  

    series: [{
        name: 'HT2',
        data: [
          <% @montant = 0 %>
          <% @programme_ht2.each do |programme| %>
            <% if programme.type_budget == "Bud. voté ou en cours de vote" || programme.type_budget == "Loi de Finances Initiale" %>
           <% @montant =  programme.montant/1000 %>
           [Date.UTC(<%=programme.date.year%>,<%= programme.date.month%>, <%=programme.date.day%>), <%= programme.montant/1000%>], 
          <% else %>
              
              [Date.UTC(<%=programme.date.year%>,<%= programme.date.month%>, <%=programme.date.day%>), <%=  @montant + programme.montant/1000%>],
          <% @montant = @montant + programme.montant/1000 %>
          <% end %> 
          <% end %>
        ],
       dataLabels: {
                enabled: true,
            },
    }, {
        name: 'T2',
        data: [
          <% @montant = 0 %>
          <% @programme_t2.each do |programme| %>
            <% if programme.type_budget == "Bud. voté ou en cours de vote" || programme.type_budget == "Loi de Finances Initiale" %>
           <% @montant =  programme.montant/1000 %>
           [Date.UTC(<%=programme.date.year%>,<%= programme.date.month%>, <%=programme.date.day%>), <%= programme.montant/1000%>], 
          <% else %>
              
              [Date.UTC(<%=programme.date.year%>,<%= programme.date.month%>, <%=programme.date.day%>), <%=  @montant + programme.montant/1000%>],
          <% @montant = @montant + programme.montant/1000 %>
          <% end %> 
          <% end %>
        ],
       dataLabels: {
                enabled: true,
            },
    }],

    responsive: {
        rules: [{
            condition: {
                maxWidth: 500
            },
            chartOptions: {
                legend: {
                    layout: 'horizontal',
                    align: 'center',
                    verticalAlign: 'bottom'
                }
            }
        }]
    }

});
</script>

