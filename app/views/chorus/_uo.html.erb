<% if !@uo.nil? &&  !@uo.first.nil?%>
<div class="SD-topo-box" id="dynamique-uo">
  <div class="SD-topo-box-title2">Visualisation au niveau des UO de ce BOP (<%= @uo_arr.length %>)     
  </div><br>
  <div class="chorus-dropdown-box">
   <div class="dropdown dropdown-chorus">
     <button class="btn btn-secondary dropdown-toggle dropdown-select-chorus" type="button" id="dropdownMenuButton2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Sélectionner un UO <i class="fas fa-chevron-down"></i></button>
      <div class="dropdown-menu dropwdown-menu-chorus" aria-labelledby="dropdownMenuButton2">
          <%= form_with url: select_uo_path(:bop_id => @bops_show, :date => @dates, :budget => @budget), id: "uo_form" do |f|%>
          <% (0..@uo_arr.length-1).each do |i|%>
            <label><%= f.check_box :id,{:multiple => true}, @uo_arr[i], nil %>  <%= @uo_arr[i]%></label>
          <% end %>
         <% end %>
      </div>
    </div>
  </div>   

  <div class="row">
   <div class="col-md-offset-1 col-md-10">
     <div id="uo_chart"> </div>
   </div>
   
  </div>

  <br><br>
 <div class="button-chorus">
  <div class="button-chorus-box">
    <div class="button-chorus-tables" id="uo-bilan-btn">Afficher les bilans</div>
    <div class="button-chorus-tables" id="uo-tables-btn">Afficher les tables</div>
  </div>
  </div>
  <div class="ED_table" id="uo-bilan">
  <table class="table-striped">
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">UO</th>
        <% @type_pieces_uo.each do |piece|%>
          <th scope="col"><%= piece%> Réception</th>
        <% end %>
          <th scope="col">Consommation par actions </th>         
      </tr>
    </thead>

    <tbody>
      <% @uos_show.each do |uo|%>
      <% if !@dates.nil?%>
        <% @dates.each do |date| %>
          <tr>
            <td><%= l(Date.new(date.to_i,1,1), format: "%Y") %></td>
            <td><%=uo %></td>
              <% @type_pieces_uo.each do |piece|%>
            <td><%= number_with_delimiter(Choru.where('centre_financier = ? AND date >= ? AND date <= ? AND type_piece = ? AND operation = ? AND compte_budgetaire = ? ',uo, Date.new(date.to_i,1,1),Date.new(date.to_i,12,31),piece, "Réception", @budget).sum('montant'), :delimiter => ' ') %> €</td>
            <%end%>
            <td><%= number_with_delimiter(Choru.where.not(domaine_fonctionnel: nil).where('centre_financier = ? AND date >= ? AND date <= ?',uo,Date.new(date.to_i,1,1),Date.new(date.to_i,12,31)).sum('montant'), :delimiter => ' ') %> €</td>

          </tr>
        <% end %>
   
      <% end %>
      <%end %>
    </tbody>
  </table>
  </div>

    <div class="ED_table" id="uo-tables">
      <table class="table-striped">
        <thead>
          <tr>
            <th scope="col">Date</th>
          
            <th scope="col">Type piece</th>
            <th scope="col">Operation</th>
            <th scope="col">Centre financier</th>
            <th scope="col">Compte budgetaire</th>
            <th scope="col">Montant (€)</th>

          </tr>
        </thead>

        <tbody>
          <% @uos_show.each do |uo|%>
          <% @dates.each do |date| %>
          <% Choru.where('centre_financier = ? AND operation = ? AND date >= ? AND date <= ? AND compte_budgetaire = ?',uo, 'Réception', Date.new(date.to_i,1,1) , Date.new(date.to_i,12,31), @budget ).each do |choru| %>
            <tr>
              
              <td><%= l(choru.date, format: "%e %b %Y") %></td>
              
              <td><%= choru.type_piece %></td>
              <td><%= choru.operation %></td>
              <td><%= choru.centre_financier %></td>
              <td><%= choru.compte_budgetaire %></td>
              <td><%= number_with_delimiter(choru.montant, :delimiter => ' ') %></td>

            </tr>
          <% end %>
          <!-- total annuel -->
            <tr class="total-annuel">
                <td><%= l(Date.new(date.to_i,1,1), format: "%Y") %></td>
        
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><%= number_with_delimiter(Choru.where('centre_financier = ? AND operation = ? AND date >= ? AND date <= ? AND compte_budgetaire = ?',uo,'Réception',Date.new(date.to_i,1,1),Date.new(date.to_i,12,31), @budget).sum('montant'), :delimiter => ' ') %></td>
            </tr><br>
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div> 
  

</div>


  <div id="actions">
    <%= render 'chorus/actions'%>
  </div>


<script>
  $('#uo-bilan').hide();
  $('#uo-tables').hide();
  $('#uo-tables-btn').click(function () {
    if ($('#uo-tables').hasClass('visible')){
    $('#uo-tables').hide();
      $('#uo-tables').removeClass('visible');
    }else {
     $('#uo-tables').show(); 
      $('#uo-tables').addClass('visible');
    }
  });
 $('#uo-bilan-btn').click(function () {
    if ($('#uo-bilan').hasClass('visible')){
    $('#uo-bilan').hide();
      $('#uo-bilan').removeClass('visible');
    }else {
     $('#uo-bilan').show(); 
      $('#uo-bilan').addClass('visible');
    }
  });
</script>
