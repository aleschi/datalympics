<% if !@uo.nil? &&  !@uo.first.nil?%>


  <div class="row">
   <div class="col-md-12">
     <div id="uo_chart"> </div>
   </div>
   
  </div>

  <br><br>
  <div class="text-center">
  <div class="inline-flex">
    <div class="bouton" style="margin-right:5px" id="uo-bilan-btn">Afficher les bilans</div>
    <div class="bouton" style="margin-left:5px" id="uo-tables-btn">Afficher les tables</div>
  </div>
  </div>
  <div class="ED_table" id="uo-bilan">
  <table class="table-striped">
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">UO</th>
        <% @type_pieces_uo.each do |piece|%>
          <th scope="col"><%= piece%> Réception</th>
        <% end %>
          <th scope="col">Consommation par actions </th>         
      </tr>
    </thead>

    <tbody>
      <% @uos_show.each do |uo|%>
      <% if !@dates.nil?%>
        <% @dates.each do |date| %>
          <tr>
            <td><%= l(Date.new(date.to_i,1,1), format: "%Y") %></td>
            <td><%=uo %></td>
              <% @type_pieces_uo.each do |piece|%>
            <td><%= number_with_delimiter(Choru.where('type_ae = ? AND centre_financier = ? AND date >= ? AND date <= ? AND type_piece = ? AND operation = ? AND compte_budgetaire = ? ',@type_ae, uo, Date.new(date.to_i,1,1),Date.new(date.to_i,12,31),piece, "Réception", @budget).sum('montant'), :delimiter => ' ') %> €</td>
            <%end%>
            <td><%= number_with_delimiter(Choru.where.not(domaine_fonctionnel: nil).where('type_ae = ?AND centre_financier = ? AND date >= ? AND date <= ?',@type_ae, uo,Date.new(date.to_i,1,1),Date.new(date.to_i,12,31)).sum('montant'), :delimiter => ' ') %> €</td>

          </tr>
        <% end %>
   
      <% end %>
      <%end %>
    </tbody>
  </table>
  </div>

  <div class="ED_table" id="uo-tables">
      <table class="table-striped">
        <thead>
          <tr>
            <th scope="col">Date</th>
          
            <th scope="col">Type piece</th>
            <th scope="col">Operation</th>
            <th scope="col">Centre financier</th>
            <th scope="col">Compte budgetaire</th>
            <th scope="col">Montant (€)</th>

          </tr>
        </thead>

        <tbody>
          <% @uos_show.each do |uo|%>
          <% @dates.each do |date| %>
          <!-- total annuel -->
            <tr class="total-annuel">
                <td><%= l(Date.new(date.to_i,1,1), format: "%Y") %></td>
        
                <td></td>
                <td></td>
                <td><%= uo %></td>
                <td><%= @budget %></td>
                <td><%= number_with_delimiter(Choru.where('type_ae = ? AND centre_financier = ? AND operation = ? AND date >= ? AND date <= ? AND compte_budgetaire = ?',@type_ae, uo,'Réception',Date.new(date.to_i,1,1),Date.new(date.to_i,12,31), @budget).sum('montant'), :delimiter => ' ') %></td>
            </tr>
          <% Choru.where('type_ae = ? AND centre_financier = ? AND operation = ? AND date >= ? AND date <= ? AND compte_budgetaire = ?',@type_ae, uo, 'Réception', Date.new(date.to_i,1,1) , Date.new(date.to_i,12,31), @budget ).each do |choru| %>
            <tr>
              
              <td><%= l(choru.date, format: "%e %b %Y") %></td>
              
              <td><%= choru.type_piece %></td>
              <td><%= choru.operation %></td>
              <td><%= choru.centre_financier %></td>
              <td><%= choru.compte_budgetaire %></td>
              <td><%= number_with_delimiter(choru.montant, :delimiter => ' ') %></td>

            </tr>
          <% end %>
          
          <% end %>
          <% end %>
        </tbody>
      </table>
    </div> 
  

<script>
  $('#uo-bilan').hide();
  $('#uo-tables').hide();
  $('#uo-tables-btn').click(function () {
    if ($('#uo-tables').hasClass('visible')){
    $('#uo-tables').hide();
      $('#uo-tables').removeClass('visible');
    }else {
     $('#uo-tables').show(); 
      $('#uo-tables').addClass('visible');
    }
  });
 $('#uo-bilan-btn').click(function () {
    if ($('#uo-bilan').hasClass('visible')){
    $('#uo-bilan').hide();
      $('#uo-bilan').removeClass('visible');
    }else {
     $('#uo-bilan').show(); 
      $('#uo-bilan').addClass('visible');
    }
  });
</script>
