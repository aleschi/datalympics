              <td><%= choru.type_piece %></td>
              <td><%= choru.operation %></td>
              <td><%= choru.centre_financier %></td>
              <td><%= choru.compte_budgetaire %></td>
              <td><%= number_with_delimiter(choru.montant, :delimiter => ' ') %></td>

            </tr>
          <% end %>
          <!-- total annuel -->
            <tr class="total-annuel">
                <td><%= l(Date.new(date.to_i,1,1), format: "%Y") %></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><%= number_with_delimiter(@uo_ht2.where('operation = ? AND date >= ? AND date <= ?','Réception',Date.new(date.to_i,1,1),Date.new(date.to_i,12,31)).sum('montant'), :delimiter => ' ') %></td>
            </tr><br>
          <% end %>
        </tbody>
      </table>
    </div> 
  
    <% if !@uo_t2.nil? && @uo_t2.length > 0 %>
   
    <div class="ED_table" id="details-uo-total-t2">
      <table class="table-striped">
        <thead>
          <tr>
