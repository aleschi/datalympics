<% if !@uo.nil? &&  !@uo.first.nil?%>
<div class="SD-topo-box">
  <div class="SD-topo-box-title2">Visualisation au niveau des UO de ce BOP (<%= @uo_arr.length %>)     
  </div><br>
     
  <div class="row">
   <div class="col-md-9">
     <div id="uo_chart"> </div>
   </div>
   <div class="col-md-3">
       <div class="chorus-select-box">
         <div class="chorus-select-box-title" id="uo_name"> <%= @uo.first.centre_financier%> </div>
          <%= form_with url: select_uo_path(:bop_id => @bop.first.centre_financier, :date => @dates), id: "uo_form" do |f|%>
          <% (0..@uo_arr.length-1).each do |i|%>
            <label><%= f.radio_button :id, @uo_arr[i] %>  <%= @uo_arr[i]%></label>
          <% end %>
         <% end %>
     </div>
   </div> 
  </div>

  <br><br>
  <div class="chorus-table-subtitle"><a id="uo-total-ht2-btn">Bilan compte budgétaire HT2</a>  <% if !@uo_t2.nil? && @uo_t2.length > 0 %><a id="uo-total-t2-btn">Bilan compte budgétaire T2</a><% end %> </div> 
  <div class="ED_table" id="uo-total-ht2">
  <table class="table-striped">
    <thead>
      <tr>
        <th scope="col">Date</th>
          <th scope="col">MADI Réception</th>
     
          <th scope="col">REAP Réception</th>
          <th scope="col">Consommation par actions </th>         
      </tr>
    </thead>

    <tbody>
      <% if !@dates.nil?%>
        <% @dates.each do |date| %>
          <tr>
            <td><%= l(Date.new(date.to_i,1,1), format: "%Y") %></td>

              <td><%= number_with_delimiter(@uo_ht2.where('date >= ? AND date <= ? AND type_piece = ? AND operation = ? ',Date.new(date.to_i,1,1),Date.new(date.to_i,12,31),"MADI", "Réception").sum('montant'), :delimiter => ' ') %> €</td>
            <td><%= number_with_delimiter(@uo_ht2.where('date >= ? AND date <= ? AND type_piece = ? AND operation = ? ',Date.new(date.to_i,1,1),Date.new(date.to_i,12,31),"REAP", "Réception").sum('montant'), :delimiter => ' ') %> €</td>
            <td><%= number_with_delimiter(@uo_ht2.where.not(domaine_fonctionnel: nil).where('date >= ? AND date <= ?',Date.new(date.to_i,1,1),Date.new(date.to_i,12,31)).sum('montant'), :delimiter => ' ') %> €</td>

          </tr>
        <% end %>
   
      <% end %>
    </tbody>
  </table>
  </div>
<% if !@uo_t2.nil? && @uo_t2.length > 0 %>
  <div class="ED_table" id="uo-total-t2">
  <table class="table-striped">
    <thead>
      <tr>
        <th scope="col">Date</th>
          <th scope="col">MADI Réception</th>
          <th scope="col">REAP Réception</th>
          <th scope="col">Consommation par actions</th>         
      </tr>
    </thead>

    <tbody>
      <% if !@dates.nil?%>
        <% @dates.each do |date| %>
          <tr>
            <td><%= l(Date.new(date.to_i,1,1), format: "%Y") %></td>

              <td><%= number_with_delimiter(@uo_t2.where('date >= ? AND date <= ? AND type_piece = ? AND operation = ? ',Date.new(date.to_i,1,1),Date.new(date.to_i,12,31),"MADI", "Réception").sum('montant'), :delimiter => ' ') %></td>
            <td><%= number_with_delimiter(@uo_t2.where('date >= ? AND date <= ? AND type_piece = ? AND operation = ? ',Date.new(date.to_i,1,1),Date.new(date.to_i,12,31),"REAP", "Réception").sum('montant'), :delimiter => ' ') %></td>
            <td><%= number_with_delimiter(@uo_t2.where.not(domaine_fonctionnel: nil).where('date >= ? AND date <= ?',Date.new(date.to_i,1,1),Date.new(date.to_i,12,31)).sum('montant'), :delimiter => ' ') %></td>


          </tr>
        <% end %>
   
      <% end %>
    </tbody>
  </table>
  </div>
<% end %>

  <div class="SD-topo-box-title2"><a href="#details-uo" role="button" data-toggle="collapse" aria-expanded="true" aria-controls="details-uo">  Tableau des mouvements de crédits au niveau de l'UO <i class="fas fa-chevron-down"></i></a>
  </div><br>
  <section id="details-uo" class="collapse"> 
  <div class="chorus-table-subtitle"><a id="details-uo-total-ht2-btn">Détails Mouvements HT2</a>  <% if !@uo_t2.nil? && @uo_t2.length > 0 %><a id="details-uo-total-t2-btn">Détails Mouvements T2</a> <% end %></div> 
  
    <div class="ED_table" id="details-uo-total-ht2">
