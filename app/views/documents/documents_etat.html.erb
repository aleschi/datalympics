<% if !@document.nil?%>
<%= render 'documents/form'%>
<% end %>
<div class="SD_page">
 
  <h1 class="SD_title">Documents Budgétaires </h1>
  
  <div class="SD-topo-box">
   <div class="SF-topo-financeurs-title"><span>Liste des Documents </span></div><br>
    <br>
    <div class="row">
     <div class="col-md-12">
       <% @dates.each do |date| %>
       <% if date <= Date.today.year %>
        <div class="documents-mois-titre">
          <%= date %>
        </div>
       <% if !@documents.nil?%>
        <% @documents.each do |document| %>
         <% if document.date.year == date %>
          <% if document.file.attached?%>
           <div class="documents-mois-doc">
             <i class="far fa-file-pdf"></i> <%= document.name%>
             <div class="documents-etat-btn"><%= link_to rails_blob_path(document.file, disposition: 'attachment') do %>Télécharger <i class="fas fa-cloud-download-alt"></i><% end %><%= link_to delete_document_path(id: document.id), method: :post, class:"documents-etat-delete" do%><i class="fas fa-trash-alt"></i><% end%></div>
           </div>
          <% else%>
            <div class="documents-mois-doc">
             <i class="far fa-file-pdf"></i> <%= document.name%>
             <div class="documents-etat-btn"><a type="button" data-toggle="modal" data-target="#file" >Transmettre</a></div>
           </div>
          <% end %>
          <% end %>
        <% end %>
       <br>
       <% end %> 
       <% end %>
     <% end %>
       
      
      </div>
    </div>  
  </div>
</div>

<script>

  $('.menu-budget-docs').addClass('menu-active2'); 
  $('.menu-budget').addClass('menu-active'); 

  $('#MonCollapse2').addClass('in'); 

</script>