

<% if !@etat_budget_actuel.nil? %>
<div class="SD-topo-box">
  <div class="SD-topo-box-title">
    <span>Le Budget de l'état  en chiffres</span>
  </div><br><br>
    <div class="row">
    <div class="col-md-4">
      <div class="calendar-infos">
        <div class="calendar-infos-box">
        <div>
          <i class="fas fa-coins"></i>
        </div>
        <div>
          <%= number_with_delimiter(EtatBudget.last.budget_total.to_i, :delimiter => ' ') %> €<br>
          <span>Budget initial</span>
        </div>
      </div>
      </div><br><br>

      <div class="calendar-infos">


      <div class="calendar-infos-box">
        <div>
        <i class="fas fa-coins"></i>
        </div>
        <div>
        <%= number_with_delimiter(EtatBudget.last.budget_total.to_i, :delimiter => ' ') %> €<br>
          <span>Budget actuel</span>
        </div>
      </div>

    </div><br><br><br><br>
      
      <div class="calendar-infos">

      <div class="calendar-infos-box">
        <div>
        <i class="fas fa-euro-sign"></i>
        </div>
        <div>
        <%= number_with_delimiter(EtatDepense.where('date <= ?', Date.today).sum('cp_prevu').to_i, :delimiter => ' ') %> €<br>
          <span>Dépenses prévues à date</span>
        </div>
      </div>

    </div><br><br>
      <div class="calendar-infos">
      <div class="calendar-infos-box">
        <div>
           <i class="fas fa-euro-sign"></i>
        </div>
        <div>
          <%= number_with_delimiter(EtatDepense.all.sum('cp_conso').to_i, :delimiter => ' ') %> €<br>
          <span>Dépenses actuelles</span>
        </div>
      </div>


    </div><br><br>
      <div class="calendar-infos">

      <div class="calendar-infos-box">
        <div>
        <i class="fas fa-euro-sign"></i>
        </div>
        <div>
        <%= ((EtatDepense.all.sum('cp_conso')/EtatBudget.last.budget_total)*100).round %>%<br>
          <span>Budget consommé</span>
        </div>
      </div>

    </div>
    </div>
      <div class="col-md-8">
        <div id="container-pie">
       
      </div>
      </div>
  </div>
  <br><br>
</div>
<% end %>

<script>
  $('.infos-details').hide();
  $('.info').mouseover(function() {
    $('.infos-details').show();
    })
  $('.info').mouseout(function() {
    $('.infos-details').hide();
    })

</script>

<script>
Highcharts.chart('container-pie', {
    chart: {
        plotBackgroundColor: null,
        plotBorderWidth: null,
        plotShadow: false,
        type: 'pie',
      spacing: [0,0,0,0],
        backgroundColor: '#fff',
          style:{
          fontFamily: "Spectral",
      
          },
      height: '350px',
    },
    title: {
         text:null,   
          style: {
                  color: "#8F8F8F",
                  fontWeight: "400",
                  fontStyle: "italic",
                  fontSize: '16px',
                  },
    },
  colors: ['#22e37b','#2e5d63', '#628859','#4a6a75'],
    tooltip: {
        pointFormat: '{series.name}: <b>{point.y:,.0f}€ </b>'
    },
    accessibility: {
        point: {
            valueSuffix: '%'
        }
    },
    plotOptions: {
        pie: {
            allowPointSelect: true,
            cursor: 'pointer',
           size: 250,
            dataLabels: {
                enabled: true,
                format: '<b>{point.name}</b><br>{point.y:,.0f}€ - {point.percentage:.1f} %',
              style: {
                      color: "#8F8F8F",
                      fontSize: "11px",
                      fontWeight: "400",
                      fontStyle: "italic",
                      },
            }
        }
    },
    series: [{
        name: 'Total',
        colorByPoint: true,
        data: [{
            name: 'Solideo',
            y: <%= @etat_budget_actuel.budget_solideo.to_i%>,
            sliced: true,
            selected: true
        }, {
            name: 'COJO',
            y: <%= @etat_budget_actuel.budget_cojo.to_i%>,
        }, {
            name: 'Heritage',
            y: <%= @etat_budget_actuel.budget_heritage.to_i%>,
        }, {
            name: 'Haute Performance',
            y: <%= @etat_budget_actuel.budget_hauteperformance.to_i%>,
        }]
    }]
});
</script>