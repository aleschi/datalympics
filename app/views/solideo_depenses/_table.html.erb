
<div  class="SD-table-box">
    <div>
    <%= line_chart [{name: "Dépenses ouvrages", data: @solideo_depenses.unscope(:order).group_by_year(:date).sum('ouvrages')},{name: "Dépenses frais de fonctionnement", data: @solideo_depenses.unscope(:order).group_by_year(:date).sum('fonctionnement')},{name: "Dépenses innovation", data: @solideo_depenses.unscope(:order).group_by_year(:date).sum('innovation')}, {name: "Dépenses réserve", data: @solideo_depenses.unscope(:order).group_by_year(:date).sum('reserve')} ], library: {
      chart:{
            backgroundColor: '#F3F8FF',
           
            spacing: [40,40,40,40],
        style:{
          fontFamily: "Spectral",
         
          }
          },

      title: {
        text:'<em>Suivi annuel des dépenses</em>',
        margin:40,
        style: {
                  color: "#8F8F8F",
                  fontWeight: "400",
                  },
      },
      yAxis: {
        gridLineColor: '#E6F0FF', 
           labels: {
               format: '${value}'
           }
       },
          tooltip: {
            pointFormat: 'Total: <b>{point.y}</b>',
            xDateFormat: '%Y',
            valuePrefix: '$'
          }
        }
    %>
  </div>
  <div class="SD-table-box-left">
    <% if !@solideo_depenses.nil? %>

      
        <div class="ED_table">
          <table>
            <thead>
              <tr>
                <th scope="col">Dates</th>
                <th scope="col">Ouvrages</th>
                <th scope="col">Fonctionnement</th>
                <th scope="col">Innovation</th>
                <th scope="col">Réserve</th>
                 <th scope="col" class="border-none"> </th>
              </tr>
            </thead>
            <tbody>
              <% @solideo_depenses.order('date DESC').each do |solideo_depense| %>
              <tr>
                <th scope="row"><%= solideo_depense.date.strftime("%Y") %></th>
                <td><%= number_with_delimiter(solideo_depense.ouvrages.to_i, :delimiter => ' ') %>€</td>
                <td><%= number_with_delimiter(solideo_depense.fonctionnement.to_i, :delimiter => ' ') %>€</td>
                <td><%= number_with_delimiter(solideo_depense.innovation.to_i, :delimiter => ' ') %>€</td>
                <td><%= number_with_delimiter(solideo_depense.reserve.to_i, :delimiter => ' ') %>€</td>
            
                <td class="border-none"> <%= link_to edit_solideo_depense_path(solideo_depense) do %> <i class="fas fa-pen"></i><% end %>
                <%= link_to solideo_depense, method: :delete, data: {confirm: "confirmer la suppression?"} do %> <i class="fas fa-trash-alt"></i><% end %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div>
          Aucune dépense renseignée
        </div>
      <%end%>

      <div class="ED_new_depense">
        <%= link_to new_solideo_depense_path do %><i class="fas fa-plus-circle"></i>Ajouter une dépense<%end%>
      </div> 
      
  </div>
  
  </div>
</div>