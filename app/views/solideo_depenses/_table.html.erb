  </div><br><br>
  <div class="SD-table-box-left">
    <div class="EB-details">
       <a href="#details" role="button" data-toggle="collapse" aria-expanded="true" aria-controls="details">Détails des dépenses </a>      
    </div><br>
    <section id="details" class="collapse">
    <% if !@solideo_depenses_array.nil? %>     
        <div class="ED_table">
          <table class="table-striped">
            <thead>
              <tr>
                <th scope="col">Dates</th>
                <th scope="col"><%= link_to ouvrages_path do %>Ouvrages<%end%></th>
                <th scope="col">Fonctionnement</th>
                <th scope="col">Innovation</th>
                <th scope="col">Réserve</th>
                <th scope="col" class="border-none">Total (k€)</th>
              </tr>
            </thead>
            <tbody>
              <% @solideo_depenses_array.each do |date| %>
              <tr>
                <th scope="row"><%= date.strftime("%b %Y") %></th>
                <td><div class="table-row"><div class="table-row-left"><%= number_with_delimiter((OuvragesDepense.where(' date = ?',date).sum('montant')/1000).to_i, :delimiter => ' ') %></div> <div class="table-row-right"> / <%= number_with_delimiter((OuvragesDepense.where('date = ?',date).sum('montant_prevu')/1000).to_i, :delimiter => ' ') %> <% if OuvragesDepense.where('date = ?', date).sum('montant').to_i > OuvragesDepense.where('date = ?', date).sum('montant_prevu').to_i%><i class="fas fa-exclamation-circle"></i><%end%></div></div></td>
                 <td><div class="table-row"><div class="table-row-left"><%= number_with_delimiter((SolideoFinancement.where('categorie = ? AND date = ?', 'fonctionnement',date).sum('montant')/1000).to_i, :delimiter => ' ') %></div> <div class="table-row-right"> / <%= number_with_delimiter((SolideoFinancement.where('categorie = ? AND date = ?', 'fonctionnement',date).sum('montant_prevu')/1000).to_i, :delimiter => ' ') %> <% if SolideoFinancement.where('categorie = ? AND date = ?', 'fonctionnement',date).sum('montant').to_i > SolideoFinancement.where('categorie = ? AND date = ?', 'fonctionnement',date).sum('montant_prevu').to_i%><i class="fas fa-exclamation-circle"></i><%end%></div></div></td>
                <td><div class="table-row"><div class="table-row-left"><%= number_with_delimiter((SolideoFinancement.where('categorie = ? AND date = ?', 'innovation',date).sum('montant')/1000).to_i, :delimiter => ' ') %></div> <div class="table-row-right"> / <%= number_with_delimiter((SolideoFinancement.where('categorie = ? AND date = ?', 'innovation',date).sum('montant_prevu')/1000).to_i, :delimiter => ' ') %> <% if SolideoFinancement.where('categorie = ? AND date = ?', 'innovation',date).sum('montant').to_i > SolideoFinancement.where('categorie = ? AND date = ?', 'innovation',date).sum('montant_prevu').to_i%><i class="fas fa-exclamation-circle"></i><%end%></div></div></td>
                <td><div class="table-row"><div class="table-row-left"><%= number_with_delimiter((SolideoFinancement.where('categorie = ? AND date = ?', 'reserve',date).sum('montant')/1000).to_i, :delimiter => ' ') %></div> <div class="table-row-right"> / <%= number_with_delimiter((SolideoFinancement.where('categorie = ? AND date = ?', 'reserve',date).sum('montant_prevu')/1000).to_i, :delimiter => ' ') %> <% if SolideoFinancement.where('categorie = ? AND date = ?', 'reserve',date).sum('montant').to_i > SolideoFinancement.where('categorie = ? AND date = ?', 'reserve',date).sum('montant_prevu').to_i%><i class="fas fa-exclamation-circle"></i><%end%></div></div></td>
                <td class="border-none"><div class="table-row"><div class="table-row-left"><%= number_with_delimiter(((OuvragesDepense.where(' date = ?',date).sum('montant')+SolideoFinancement.where('categorie != ? AND date = ?','ouvrages',date).sum('montant'))/1000).to_i, :delimiter => ' ') %></div> <div class="table-row-right"> / <%= number_with_delimiter(((OuvragesDepense.where(' date = ?',date).sum('montant_prevu')+SolideoFinancement.where('categorie != ? AND date = ?',"ouvrages",date).sum('montant_prevu'))/1000).to_i, :delimiter => ' ') %> <%if OuvragesDepense.where(' date = ?',date).sum('montant')+SolideoFinancement.where('categorie != ? AND date = ?','ouvrages',date).sum('montant') > OuvragesDepense.where(' date = ?',date).sum('montant_prevu')+SolideoFinancement.where('categorie != ? AND date = ?','ouvrages',date).sum('montant_prevu') %><i class="fas fa-exclamation-circle"></i><%end %></div></div></td>
               
             </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    <% else %>
      <div>Aucune dépense renseignée</div>
    <%end%>
    </section>

  </div>
</div><br><br>

