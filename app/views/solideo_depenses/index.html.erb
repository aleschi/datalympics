<script>

  Highcharts.chart('container-bar-all', {
    chart: {
        type: 'column',
    height:'200px',
      backgroundColor: '#fff',
          style:{
          fontFamily: "Marianne Regular",
     
          },
    },
    title: {
        text: 'Répartition et suivi du budget par pole',
        verticalAlign: "bottom",
        style: {
                  color: "#8F8F8F",
                  fontWeight: "400",
          fontStyle: 'italic',
          fontSize: '12px',
                  },
    },

    xAxis: {
        categories: ['Ouvrages', 'Fonctionnement',  "Innovation", "Réserve" ],
        crosshair: true
    },
    yAxis: {
        min: 0,
        title: {
            text: 'Budget (M€)'
        },
      gridLineColor: "#fff",
    },
  legend: {
    enabled: false,
  },
    tooltip: {
        headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
        pointFormat: '<tr><td style="padding:0"><b>{series.name} : </b></td>' +
            '<td style="padding:0"><b> {point.y:.1f} M€</b></td></tr>',
        footerFormat: '</table>',
        shared: true,
        useHTML: true,
       borderColor: 'transparent',
   borderRadius: 16,
   backgroundColor: '#fff',
    },
    plotOptions: {
        column: {
            pointPadding: 0.2,
            borderWidth: 0,
            grouping: false,
          dataLabels: {
                enabled: true
            }
        }
    },
    series: [{
        name: 'Budget Total Maquette',
        data: [{y:<%= @budget_ouvrages%>, color:"#bfbfbf" },{y:<%= @budget_fonctionnement%>, color:"#bfbfbf" },{y:<%=@budget_innovation_initial%>, color: "#bfbfbf"},{y:<%=@budget_reserve_initial%>, color: "#bfbfbf"}],
        pointPlacement: 0,
    },{
        name: 'Consommé',
        data: [{y:<%= @budget_ouvrages_depenses%>, color:"#5770BE" },{y:<%= (4.8+11.5+17.6+8.1).round(1)%>, color:"#76505B" },{y:<%=@budget_innovation_consomme%>, color: "#FFE800"},{y:<%=@budget_reserve_consomme%>, color: "#D08A77"}],
        pointPlacement: 0,

    }]
});
</script>

