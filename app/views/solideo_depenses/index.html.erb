
<div class="SD_page">
  <div class="SD_home_button">
    <%= link_to root_path do %><i class="fas fa-chevron-left"></i><i class="fas fa-home"></i>Retour accueil<%end %>
  </div>
 
  <h1 class="SD_title">La Solideo</h1>
  
  <% if !@solideo_financements.nil?%>
<div class="SD-topo-box">
  
  <div class="budget-topo_chart-box"> 
    <div class="budget-topo-chart">
      <div class="SD-topo-box-title">
        <span>Financement de la Solideo</span>
      </div><br><br>
     
      <div id="container2">
     
      </div>
       <div class="SF-topo-explication">
         <% if @solideo_financements.sum('montant') > @solideo_financements.where('date <= ?', Date.today).sum('montant_prevu') %><span class="positive"> + <%= number_with_delimiter((@solideo_financements.sum('montant')-@solideo_financements.where('date <= ?', Date.today).sum('montant_prevu')).to_i, :delimiter => ' ')%> € </span><% else %><span class="negative"> - <%= number_with_delimiter((@solideo_financements.where('date <= ?', Date.today).sum('montant_prevu')-@solideo_financements.sum('montant')).to_i, :delimiter => ' ')%> €</span><% end %> par rapport aux financements prévus à date.
         <br><%= link_to "En savoir plus " , solideo_financements_path %>
      </div>
      <br>
     
   
   
    </div>
    <div class="budget-topo-chart">
      <div class="SD-topo-box-title-depenses">
        <span>Dépenses de la Solideo</span>
      </div><br><br>
      
      <div id="container">
       
      
    </div>
      <div class="SF-topo-explication">
        <% if @solideo_depenses_total_prevu > @solideo_depenses_total%><span class="positive"> - <%= number_with_delimiter((@solideo_depenses_total_prevu - @solideo_depenses_total).to_i, :delimiter => ' ')%> € </span><%else%><span class="negative"> + <%= number_with_delimiter((@solideo_depenses_total - @solideo_depenses_total_prevu).to_i, :delimiter => ' ')%> €</span><%end%> par rapport aux dépenses prévues à date
      </div>
  </div>
  </div>
  <br><br>
</div>
  <% end %> 
  <br><br>
  <%= render 'topo'%>
  <br><br>
  <div id="table_filtres">
