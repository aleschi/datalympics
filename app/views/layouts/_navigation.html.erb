    <div class="dropdown navigation-menu ">
      <a class="menu menu-solideo" href="#MonCollapse" role="button" data-toggle="collapse" aria-expanded="true" aria-controls="MonCollapse" id="btn-collapse"><i class="fas fa-funnel-dollar"></i> Suivi Budget Solideo<span class="collapse-icon"></span></a>
    </div>
    <section id="MonCollapse" class="collapse">
      <div class="navigation-menu navigation-menu2"><%= link_to solideo_depenses_path, class:"menu2  menu-solideo-depenses" do %>Dépenses Solideo<%end%></div>
      
      <div class="navigation-menu navigation-menu2"><%= link_to ouvrages_depenses_path, class:"menu2 menu-solideo-maquette" do%>Maquette financière <%end%></div>
      <div class="navigation-menu navigation-menu2"><%= link_to solideo_financements_path, class:"menu2 menu-solideo-finances" do %>Financements & Recettes <%end%></div>
    </section>
  
    <!-- Budget Etat-->
    <div class="navigation-menu"><%= link_to etat_budgets_path, class:"menu  menu-budget-global" do %><i class="fas fa-funnel-dollar"></i> Suivi Budget Etat<%end%></div>

