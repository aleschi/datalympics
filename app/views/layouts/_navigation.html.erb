  <div class="navigation-avatar">
    <div class="navigation-avatar-img">
      <i class="fas fa-user-circle"></i>
    </div>
    <div class="navigation-avatar-name">
      <% if user_signed_in? %><%= current_user.email%> <% end %>
    </div>
    <div class="navigation-avatar-name hidden">
      connecté en tant que : AGENT DB 
    </div>
  </div>
  
  <div class="home-solideo-logo">
    <%= image_tag 'solideo.svg'%>
  </div>
  
  <!-- Accueil -->
  <div class=" navigation-menu TB-menu-prof menu-accueil">
    <%= link_to root_path, class: "menu" do%><i class="fas fa-home"></i> Accueil<% end %>
