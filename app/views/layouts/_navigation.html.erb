    <div class="navigation-menu menu-documents-solideo"><%= link_to documents_solideo_path, class: "menu" do %><i class="fas fa-file-upload"></i> Documents <%end%></div>
  

    <div class="TB-menu-prof"><%= link_to destroy_user_session_path, method: :delete, class: "menu" do%><i class="fas fa-sign-out-alt"></i>Se déconnecter<% end %></div>
